# LLM Provider Selection
# Options: "gemini", "openai", "anthropic"
LLM_PROVIDER=gemini

# API Keys (only set the one you're using)
GEMINI_API_KEY=your-gemini-key-here
# OPENAI_API_KEY=your-openai-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here

# Model Configuration
# Gemini: gemini-2.5-flash, gemini-1.5-pro, gemini-1.5-flash
# OpenAI: gpt-4, gpt-3.5-turbo
# Anthropic: claude-sonnet-4-20250514, claude-opus-4-20250514
MODEL_NAME=gemini-2.5-flash

MAX_TOKENS=1000
TEMPERATURE=0.0

# Classification Threshold (below this triggers RAG)
CONFIDENCE_THRESHOLD=0.75

# RAG Configuration
VECTOR_DB_URL=http://vector-db-service:8003
RAG_EXAMPLES_COUNT=3

# Logging
LOG_LEVEL=INFO